doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/styles/style.css")
        link(rel="stylesheet" href="/styles/usersStyle.css")
        link(rel="shortcut icon" href="../img/nasaLogo.png")
        title NasaApi
    body 
        include ./nav.pug
        table  
            each val in getId

                form(method='post', action='delete')
                    tr
                        td
                            label(for=val)=name[sumador++]
                            a(href=`/edit/${val}`, class='editBtn') Edit
                            input(type='hidden', value=val, name='id')
                            input(type='submit', class='nose', value='Delete', id=val)
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/styles/style.css")
        link(rel="stylesheet" href="/styles/editStyle.css")
        link(rel="shortcut icon" href="../img/nasaLogo.png")
        title NasaApi
    body 
        include ./nav.pug
        p=msj
        br
        h2(class='errMsj')=errMsj
        form(method='post', action='update', class='editBox')
            label(for='name') Change Name
            input(type='text', name='name', placeholder='Jhon')
            label(for='nickname') Change username
            input(type='text', name='nickname', placeholder='Nick')
            label(for='occupation') Change ocupation
            input(type='text', name='occupation', placeholder='Nurse')
            label(for='birthdate') Change birthdate
            input(type='text', name='birthdate', placeholder='01/01/1111')
            label(for='neasDiscovered') Introduce NEA's
            input(type='text', name='neasDiscovered', placeholder='lorem')
            label(for='necsDiscovered') Introduce NEC's
            input(type='text', name='necsDiscovered', placeholder='ipsum')
            label(for='astronomicalPoints') Introduce Astronomical Points
            input(type='text', name='astronomicalPoints', placeholder='37')
            input(type='hidden', value=affNum, name='id')
            input(type='submit', placeholder='Update', class='submitButton')